<!DOCTYPE html>
<html>
  <head>
    <title>Mon projet GitHub</title>
    <style>
      #iframes-container {
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      iframe {
        width: 100%;
        height: 600px;
        border: none;
        margin-bottom: 10px;
      }
    </style>
  </head>
  <body>
    <h1>Index de mon projet GitHub</h1>
    <div id="iframes-container"></div>
    <script>
      const iframesContainer = document.getElementById("iframes-container");
      
      // Récupérer le contenu du fichier de référence sur GitHub à l'aide de l'API
      fetch('https://api.github.com/repos/nomutilisateur/nomprojet/contents/liste-de-reference.txt')
        .then(response => response.json())
        .then(data => {
          // Convertir les données du fichier en chaîne de caractères
          const referenceList = atob(data.content);
          
          // Parcourir la liste de référence et créer dynamiquement une iframe pour chaque site web
          referenceList.split('\n').forEach(siteUrl => {
            const trimmedSiteUrl = siteUrl.trim();
            if (trimmedSiteUrl.length > 0) {
              const iframe = document.createElement("iframe");
              iframe.src = trimmedSiteUrl;
              iframe.width = "100%";
              iframe.height = "600px";
              iframesContainer.appendChild(iframe);
            }
          });
        })
        .catch(error => console.error(error));
    </script>
  </body>
</html>
