<!DOCTYPE html>
<html>
  <head>
    <title>Mon projet GitHub</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
      #iframes-container {
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      iframe {
        width: 80%;
        height: 600px;
        border: none;
        margin-bottom: 10px;
      }

      .error-message {
        color: red;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Index de mon projet GitHub</h1>
    <div id="iframes-container"></div>
    <div id="error-message-container"></div>
    <script>
      const iframesContainer = $("#iframes-container");
      const errorMessageContainer = $("#error-message-container");

      $.ajax({
        url: "https://raw.githubusercontent.com/Vfortalent/Liste-Index/main/liste-de-reference.txt",
        success: function(referenceList) {
          // Parcourir la liste de référence et créer dynamiquement une iframe pour chaque site web
          referenceList.split("\n").forEach((siteUrl) => {
            const trimmedSiteUrl = siteUrl.trim();
            if (trimmedSiteUrl.length > 0) {
              const iframe = $("<iframe></iframe>");
              iframe.attr("src", trimmedSiteUrl);
              iframe.attr("width", "80%");
              iframe.attr("height", "600px");
              iframesContainer.append(iframe);
            }
          });
        },
        error: function(xhr, status, error) {
          errorMessageContainer.text(`Une erreur s'est produite : ${error}`);
        },
      });
    </script>
  </body>
</html>
